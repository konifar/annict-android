<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Text -->
    <style name="TextTitle">
        <item name="android:textSize">@dimen/text_16sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:maxLines">2</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="TextSub">
        <item name="android:textSize">@dimen/text_12sp</item>
        <item name="android:textColor">@color/grey500</item>
        <item name="android:maxLines">2</item>
        <item name="android:ellipsize">end</item>
    </style>

    <!-- Clicker -->
    <style name="ClickCover">
        <item name="android:background">@drawable/clickable</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:clickable">true</item>
    </style>

    <!-- Component -->
    <style name="BaseRecyclerView">
        <item name="android:clipToPadding">false</item>
        <item name="android:fadingEdge">none</item>
        <item name="android:scrollbarStyle">outsideOverlay</item>
        <item name="android:scrollingCache">false</item>
    </style>

    <style name="DialogWindowAnimation">
        <item name="android:windowEnterAnimation">@anim/dialog_fade_enter</item>
        <item name="android:windowExitAnimation">@anim/dialog_fade_exit</item>
    </style>

    <style name="ToolbarSearchEditText" parent="Widget.AppCompat.EditText">
        <item name="colorControlNormal">@color/white_alpha_95</item>
        <item name="colorControlActivated">@color/white</item>
        <item name="android:textSize">@dimen/text_16sp</item>
        <item name="android:drawableLeft">@drawable/ic_search_white_24dp_vector_state</item>
        <item name="android:drawableStart">@drawable/ic_search_white_24dp_vector_state</item>
        <item name="android:drawablePadding">@dimen/space_8dp</item>
        <item name="android:drawableRight">@drawable/ic_close_white_18dp_vector_state</item>
        <item name="android:drawableEnd">@drawable/ic_close_white_18dp_vector_state</item>
        <item name="android:imeOptions">actionSearch</item>
        <item name="android:inputType">text</item>
        <item name="android:textCursorDrawable">@drawable/rect_edit_text_cursor</item>
        <item name="android:maxLines">1</item>
        <item name="android:paddingRight">@dimen/space_8dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/white_alpha_40</item>
        <item name="android:textColorHighlight">@color/black_alpha_12</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="TabLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/theme500</item>
        <item name="android:elevation" tools:targetApi="lollipop">@dimen/elevation</item>
        <item name="elevation">@dimen/elevation</item>
        <item name="tabIndicatorColor">@color/accent100</item>
        <item name="tabTextColor">@color/white_alpha_40</item>
    </style>

</resources>
