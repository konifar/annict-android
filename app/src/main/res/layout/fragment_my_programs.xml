<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.konifar.fragment.MyProgramsFragment">

    <data>

        <variable
            name="viewModel"
            type="com.konifar.annict.viewmodel.MyProgramsViewModel" />
    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/content_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <ProgressBar
            android:id="@+id/progress_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            app:visibility="@{viewModel.progressBarVisibility}" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler_view"
            style="@style/BaseRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="vertical"
            app:visibility="@{viewModel.recyclerViewVisibility}" />

    </FrameLayout>

</layout>
