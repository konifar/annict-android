<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.konifar.annict.view.fragment.LoginFragment">

    <data>

        <import type="java.lang.String" />

        <variable
            name="viewModel"
            type="com.konifar.annict.viewmodel.RecordCreateViewModel" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:padding="@dimen/space_16dp">

        <TextView
            android:id="@+id/txt_title"
            style="@style/TextTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@{viewModel.program.work.title}"
            android:textSize="@dimen/text_16sp" />

        <!--<com.konifar.annict.view.widget.CustomRatingBar-->
        <!--android:id="@+id/rating_bar"-->
        <!--style="@style/RatingBar"-->
        <!--android:layout_below="@id/txt_title"-->
        <!--android:layout_marginTop="@dimen/space_8dp"-->
        <!--android:layout_toLeftOf="@+id/txt_rating"-->
        <!--android:layout_toStartOf="@+id/txt_rating"-->
        <!--app:isIndicator="false"-->
        <!--app:rating="@={viewModel.rating}" />-->

        <RatingBar
            android:id="@+id/rating_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_title"
            android:layout_marginTop="@dimen/space_8dp"
            android:layout_toLeftOf="@+id/txt_rating"
            android:layout_toStartOf="@+id/txt_rating"
            android:isIndicator="false"
            android:numStars="5"
            android:rating="@={viewModel.rating}"
            android:stepSize="1" />

        <TextView
            android:id="@+id/txt_rating"
            style="@style/TextSub"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@id/txt_title"
            android:layout_marginTop="@dimen/space_8dp"
            android:text="@{String.valueOf(viewModel.rating)}" />

        <SeekBar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rating_bar"
            android:layout_marginTop="@dimen/space_8dp"
            android:max="50"
            android:progress="@={viewModel.ratingProgress}" />

    </RelativeLayout>

</layout>
