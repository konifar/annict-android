<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="programViewModel"
            type="com.konifar.annict.viewmodels.ProgramViewModel" />
    </data>

    <RelativeLayout
        android:id="@+id/content_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="@dimen/spacing">

        <ImageView
            android:id="@+id/img_thumb"
            android:layout_width="@dimen/image_thumb"
            android:layout_height="@dimen/image_thumb"
            android:layout_marginEnd="@dimen/spacing"
            android:layout_marginRight="@dimen/spacing"
            android:background="@color/grey200"
            android:contentDescription="@string/photo" />

        <TextView
            android:id="@+id/txt_work"
            style="@style/TextTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/img_thumb"
            android:layout_toRightOf="@id/img_thumb"
            android:text="@{programViewModel.workTitle}" />

        <TextView
            android:id="@+id/txt_episode"
            style="@style/TextSub"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_work"
            android:layout_marginTop="@dimen/spacing_small"
            android:layout_toEndOf="@id/img_thumb"
            android:layout_toRightOf="@id/img_thumb"
            android:text="@{programViewModel.episodeTitle}" />

        <TextView
            android:id="@+id/txt_date"
            style="@style/TextSub"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_episode"
            android:layout_marginTop="@dimen/spacing_small"
            android:layout_toEndOf="@id/img_thumb"
            android:layout_toRightOf="@id/img_thumb"
            android:text="@{programViewModel.displayDate}" />

        <TextView
            android:id="@+id/txt_channel"
            style="@style/TextSub"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/spacing_small"
            android:layout_marginStart="@dimen/spacing_small"
            android:layout_toEndOf="@id/txt_date"
            android:layout_toRightOf="@id/txt_date"
            android:text="@{programViewModel.channel}" />

    </RelativeLayout>

</layout>
